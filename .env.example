# ===============================
# Core network / compose
# ===============================
BITCOIN_NETWORK=mainnet
COMPOSE_PROJECT_NAME=bitcoin-stack

# ===============================
# Public domains (you control)
# ===============================
TRAEFIK_ACME_EMAIL=ssl@novadova.com
POOL_API_DOMAIN=api.novadova.com
POOL_STRATUM_DOMAIN=stratum.novadova.com

# ===============================
# Bitcoin Core RPC (private only)
# ===============================
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASSWORD=CHANGE_ME_STRONG

# (optional, not used by compose flagsâ€”keep consistent if you use it)
BITCOIN_DBCACHE=8000
BITCOIN_MAXCONNECTIONS=200
BITCOIN_PRUNE=0

# ===============================
# Fractal-Bitcoin RPC (private)
# ===============================
FRACTAL_RPC_USER=fractalrpc
FRACTAL_RPC_PASSWORD=CHANGE_ME_STRONG_TOO
FRACTAL_MEMORY_LIMIT=8g
FRACTAL_CPU_LIMIT=2.0

# ===============================
# Remove or leave false
# ===============================
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
DEV_MODE=false
HOT_RELOAD=false
