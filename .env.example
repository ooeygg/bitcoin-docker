# Bitcoin Core Docker Environment Configuration
# Copy this file to .env and customize the values

# Bitcoin Network Configuration
BITCOIN_NETWORK=mainnet
# BITCOIN_NETWORK=testnet
# BITCOIN_NETWORK=regtest

# Bitcoin RPC Configuration
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASSWORD=change-this-password-in-production

# Bitcoin Core Settings
BITCOIN_PRUNE=0
BITCOIN_DBCACHE=1000
BITCOIN_MAXCONNECTIONS=125

# Electrum Server Configuration
ELECTRS_LOG_LEVEL=INFO
ELECTRS_VERBOSITY=2

# Docker Configuration
COMPOSE_PROJECT_NAME=bitcoin-stack

# Resource Limits
BITCOIN_MEMORY_LIMIT=4g
ELECTRS_MEMORY_LIMIT=2g

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM